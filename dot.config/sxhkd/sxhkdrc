#
# bspwm hotkeys
#

# Toggle panels
#super + q
# {pkill panel; pkill cat; pkill conky; bspc config top_padding 0 ,\
# bspc config top_padding 14; $HOME/.config/bspwm/panel/panel & }

super + shift + q
	bspc quit 2 && pkill bar && pkill dzen2 && kill -KILL `pgrep panel`

super + w
	bspc window -c

super + shift + l
 xscreensaver-command --lock

super + t
	bspc desktop -l next

super + ctrl + t
	bspc window focused -m next

super + b
	bspc desktop -B

super + {s,f}
	bspc window -t {floating,fullscreen}

super + {grave,Tab}
	bspc {window,desktop} -f last

super + apostrophe
	bspc window -s last

#super + {o,i}
#	bspc control --record-history off; \
#	bspc window {older,newer} -f; \
#	bspc control --record-history on

super + y
	bspc window -w last.manual

super + m
	bspc window -s biggest

super + {_,shift + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}

super + {_,shift + }c
	bspc window -f {next,prev}

super + {comma,period}
	bspc desktop -C {backward,forward}

super + {Left,Right}
	bspc desktop -f {prev,next}

super + ctrl + {h,j,k,l}
	bspc window -p {left,down,up,right}

super + ctrl + {_,shift + }space
	bspc {window -p cancel,desktop -c}

super + alt + {h,j,k,l}
	bspc window -e {left -10,down +10,up -10,right +10}

super + alt + shift + {h,j,k,l}
	bspc window -e {right -10,up +10,down -10,left +10}

super + ctrl + {1-9}
	bspc window -r 0.{1-9}

# bspc {desktop -f, window -d} $(bspc query -M -m)/{i,ii,iii,iv,v,vi,vii,viii,ix,x}
#bash $HOME/bin/move_ws {desktop -f, window -d} {i,ii,iii,iv,v,vi,vii,viii,ix,x}
#bspc {desktop -f, window -d} \^$(bspc query -M -m):\^{i,ii,iii,iv,v,vi,vii,viii,ix,x} && \
super + {_,shift + }{1-9,0}
 bspc {desktop -f, window -d} $(bspc query -M -m)/{i,ii,iii,iv,v,vi,vii,viii,ix,x}

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

# window split manual mode
super + {y,u,i,o}
 bspc window -p {left,down,up,right}

#
# wm independent hotkeys
#
super + Return
 termite
# terminator
#  termite -e tmux
#  urxvtc

ctrl + 9
 dmenu_run -fn "Hack 20" -p "command > "

ctrl + 8
 $HOME/scripts/lens 

Print
 scrot $HOME/Pictures/scrot-%Y-%m-%d-%H-%M-%S.png -d 2 

super + Print
 scrot -u $HOME/Pictures/scrot-window-%Y-%m-%d-%H-%M-%S.png -d 2 

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
