#!/bin/bash
version=$1

if [[ -d /usr/local/goenv/go$version ]] ; then 
    # remove symlink
    rm -f /usr/local/go 
    ln -s /usr/local/goenv/go$version /usr/local/go
    echo -n -e "\e[36m"
    echo -e `go version`
    echo -n -e "\e[39m"
else
    echo -e "\e[31m[ERROR] Does not exist version (/usr/local/goenv): go$version"
    echo -e "\e[39m"
    echo -e "You have versions:"
    echo -n -e "\t"
    echo `ls /usr/local/goenv`
    echo -e "\e[39m"
    echo -e " \e[36mNOTE: you must only specify number of version, without 'go' literal."
    echo -e "\e[39m"
fi
